$eau_record = {};
$collection = 'database';
$schema = {user: 'string', passwd: 'string', desc: 'string'};

//===========================================================

if (count($argv) != 1)
{
    return -1;
}

$id = $argv[0];

if (!db_exists($collection))
{
    print db_errlog();
    return -2;
}

$ret = -3;
while(($rec=db_fetch($collection)) != NULL) 
{
    if($rec.id == $id) {
        $eau_record = $rec;
        $ret = 0;
        break;
    }
}

return $ret;
